                <form class="register-form" id="register-form">

                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="text" name="code" id="code" placeholder="Code verify" />
                        <input type="hidden" name="email" id="email" placeholder="Code verify" value="@ViewBag.email" />
                    </div>
                    <p style="color:red" id="resultError"></p>
                    <p style="color:forestgreen" id="resultSuccess"></p>
                    <div class="form-group form-button">
                        <input type="button" onclick="verify()" name="signin" id="signin" class="form-submit" value="Submit" />
                    </div>
                </form>
                @using (Html.BeginForm("getCodeAgain", "Authentication", FormMethod.Post))
                {
                    <input type="hidden" name="email" id="email1" placeholder="Code verify" value="@ViewBag.email" />
                    <button style="text-decoration: none; background-color: none; border: none; color: #d42304;background:none;margin-top:20px " type="submit" id="laymatkhau">Cấp lại mã</button>
                }
            </div>
        </div>
    </div>
    <script>
        function verify() {
            var email = $("#email").val();
            var code = $("#code").val();
            if (code == '' || email == '') {
                $('#resultError').html("Cần điền mã verify");
            } else {
                $.ajax({
                    url: '/Authentication/Verify',
                    type: "post",
                    data: {
                        email: email,
                        code: code,

                    },
                    success: function (data) {
                        console.log(data);
                        if (data.status == "OK") {
                            $('#resultError').html("");
                            document.getElementById("dongho").innerHTML=""
                            $('#resultSuccess').html(data.msg);
                            window.location.href = "https://localhost:44313/Authentication/Login";
                        } else {
                            document.getElementById("dongho").innerHTML=""
                            $('#resultError').html(data.msg);
                        }

                    },
                    error: function (error) {
                        console.log(error);

                    }
                })
            }
        }
    </script>
