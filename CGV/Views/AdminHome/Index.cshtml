
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MyLayout/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">

        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active"></li>
        </ol>
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">@ViewBag.CountFilm Phim trong Cinema</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-body">@ViewBag.CountUser Người dùng</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">@ViewBag.CountBooking Đơn đặt vé</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Tổng thu nhập : @ViewBag.SumMoney</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-area me-1"></i>
                Số lượng vé bán ra
            </div>
            <div class="card-body"><canvas id="myAreaChart" width="100%" height="30"></canvas></div>
        </div>
        <p style="display:none" id="m1">@ViewBag.Month1</p>
        <p style="display:none" id="m2">@ViewBag.Month2</p>
        <p style="display:none" id="m3">@ViewBag.Month3</p>
        <p style="display:none" id="m4">@ViewBag.Month4</p>
        <p style="display:none" id="m5">@ViewBag.Month5</p>
        <p style="display:none" id="m6">@ViewBag.Month6</p>
        <p style="display:none" id="m7">@ViewBag.Month7</p>
        <p style="display:none" id="m8">@ViewBag.Month8</p>
        <p style="display:none" id="m9">@ViewBag.Month9</p>
        <p style="display:none" id="m10">@ViewBag.Month10</p>
        <p style="display:none" id="m11">@ViewBag.Month11</p>
        <p style="display:none" id="m12">@ViewBag.Month12</p>
        <p style="display:none" id="c1">@ViewBag.Count1</p>
        <p style="display:none" id="c2">@ViewBag.Count2</p>
        <p style="display:none" id="c3">@ViewBag.Count3</p>
        <p style="display:none" id="c4">@ViewBag.Count4</p>
        <p style="display:none" id="c5">@ViewBag.Count5</p>
        <p style="display:none" id="c6">@ViewBag.Count6</p>
        <p style="display:none" id="c7">@ViewBag.Count7</p>
        <p style="display:none" id="c8">@ViewBag.Count8</p>
        <p style="display:none" id="c9">@ViewBag.Count9</p>
        <p style="display:none" id="c10">@ViewBag.Count10</p>
        <p style="display:none" id="c11">@ViewBag.Count11</p>
        <p style="display:none" id="c12">@ViewBag.Count12</p>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Doanh thu đạt được
            </div>
            <div class="card-body"><canvas id="myBarChart" width="100%" height="50"></canvas></div>

        </div>

    </div>
</main>

